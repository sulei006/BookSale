<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.su.booksale.mapper.BookMapper">


    <select id="listBooks" resultType="Book">
        select * from book  order by  soldNum DESC ,bookName ASC
    </select>

    <select id="getBookById"  parameterType="long" resultType="Book">
        select * from book where bookId=#{id}
    </select>

    <update id="sellBook1">
        update book set leftNum=leftNum-#{toSellNum},soldNum=soldNum+#{toSellNum} where bookId=#{bookId} and leftNum>#{toSellNum};
    </update>

    <update id="setBookPrice" >
        update book set outPrice=#{outPrice} where bookId=#{bookId};
    </update>

    <update id="sellBook">
        update book set leftNum=leftNum-#{toSellNum},soldNum=soldNum+#{toSellNum} where bookId=#{bookId};
    </update>

    <update id="returnBook">
        update book set leftNum=leftNum+#{returnNum} where bookId=#{bookId};
    </update>

    <update id="stockBook">
        update book set leftNum=leftNum+#{stockNum},outPrice=#{outPrice} where bookId=#{bookId};
    </update>

    <insert id="addBook" parameterType="Book">
        insert into book  values (#{bookId},#{bookName},#{inPrice},#{outPrice},#{leftNum},#{soldNum});
    </insert>

    <select id="getMonthlyOutNum" resultType="long">
        SELECT sum(outNumber) FROM booksell.daysellrecord
    </select>
    
    <select id="getMonthlySales" resultType="BigDecimal">
        SELECT sum(outNumber*outPrice) FROM booksell.daysellrecord
    </select>

    <select id="getRankingList" resultType="Book">
        SELECT * FROM booksell.book  order by  soldNum DESC ,bookName ASC limit 5
    </select>

    <select id="search" parameterType="String" resultType="Book">
        SELECT * FROM booksell.book  where bookName like concat('%',#{keyWord},'%') order by bookName
    </select>

</mapper>